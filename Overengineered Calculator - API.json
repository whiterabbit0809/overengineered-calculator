		{
			"name": "Get HISTORY",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"History: status code 200\", function () {\r",
							"    pm.expect(pm.response.code).to.eql(200);\r",
							"});\r",
							"\r",
							"pm.test(\"History: response is JSON array\", function () {\r",
							"    const json = pm.response.json();\r",
							"    pm.expect(json).to.be.an(\"array\");\r",
							"});\r",
							"\r",
							"pm.test(\"History: first entry has required fields\", function () {\r",
							"    const json = pm.response.json();\r",
							"    pm.expect(json.length).to.be.greaterThan(0);\r",
							"\r",
							"    const first = json[0];\r",
							"    pm.expect(first).to.have.property(\"expression\");\r",
							"    pm.expect(first).to.have.property(\"result\");\r",
							"    pm.expect(first).to.have.property(\"createdAt\");\r",
							"    pm.expect(first).to.have.property(\"email\");\r",
							"});\r",
							"\r",
							"pm.test(\"History: first entry email matches collection email\", function () {\r",
							"    const json = pm.response.json();\r",
							"    pm.expect(json.length).to.be.greaterThan(0);\r",
							"\r",
							"    const first = json[0];\r",
							"    const expectedEmail = pm.collectionVariables.get(\"email\");\r",
							"    pm.expect(first.email).to.eql(expectedEmail);\r",
							"});\r",
							"\r",
							"pm.test(\"History: first entry result matches lastResult\", function () {\r",
							"    const json = pm.response.json();\r",
							"    pm.expect(json.length).to.be.greaterThan(0);\r",
							"\r",
							"    const first = json[0];\r",
							"    const lastResult = Number(pm.collectionVariables.get(\"lastResult\"));\r",
							"\r",
							"    pm.expect(first.result).to.eql(lastResult);\r",
							"});\r",
							"\r",
							"// Optional: log last few history lines for visual check\r",
							"(function () {\r",
							"    const json = pm.response.json();\r",
							"    console.log(\"History entries (top 3):\", json.slice(0, 3));\r",
