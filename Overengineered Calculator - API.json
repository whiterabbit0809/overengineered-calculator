		{
			"name": "Auth - Login",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Login: status code is 200\", function () {\r",
							"    pm.expect(pm.response.code).to.eql(200);\r",
							"});\r",
							"\r",
							"pm.test(\"Login: response is JSON\", function () {\r",
							"    pm.response.to.be.withBody;\r",
							"    pm.response.to.be.json;\r",
							"});\r",
							"\r",
							"pm.test(\"Login: status is passed or failed\", function () {\r",
							"    const json = pm.response.json();\r",
							"    pm.expect(json).to.have.property(\"status\");\r",
							"    pm.expect(json.status).to.be.oneOf([\"passed\", \"failed\"]);\r",
							"});\r",
							"\r",
							"// Only check for token if login actually passed\r",
							"pm.test(\"Login: token present when passed\", function () {\r",
							"    const json = pm.response.json();\r",
							"    if (json.status === \"passed\") {\r",
							"        pm.expect(json).to.have.property(\"token\");\r",
							"        pm.expect(json.token).to.be.a(\"string\").that.is.not.empty;\r",
							"    }\r",
							"});\r",
							"\r",
							"pm.collectionVariables.unset(\"authToken\");\r",
							"\r",
							"// Save token to collection variable on successful login\r",
							"(function () {\r",
							"    const json = pm.response.json();\r",
							"    if (json.status === \"passed\" && json.token) {\r",
							"        pm.collectionVariables.set(\"authToken\", json.token);\r",
							"        console.log(\"Saved authToken:\", json.token);\r",
							"    } else {\r",
							"        console.log(\"Login failed â€“ authToken not set\");\r",
							"    }\r",
							"})();\r",
							""
						],
						"type": "text/javascript",
						"packages": {},
						"requests": {}
					}
				}
			],
			"request": {
				"auth": {
					"type": "noauth"
				},
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json",
						"type": "text"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n  \"email\": \"{{email}}\",\n  \"password\": \"{{password}}\"\n}"
